<!doctype html>
<html ng-app="rtmms">
<head>
    <title>RTMMS</title> 
	<link rel="stylesheet" href="dist/css/style.min.css">
	<link rel="stylesheet" href="libs/angular-dialog-service/dist/dialogs.min.css">
	<script src="dist/js/app.min.js"></script> 
</head>
<body ng-controller="MainController">
	<div class="container-fluid">
		<div class="logo row">
			<h1><a ui-sref="/">RTMMS</a></h1>
		</div>

		<!-- HEADER -->
		<nav class="navbar navbar-inverse" >
			<div class="navbar-header">
				<a class="navbar-brand" ui-sref="/">Home</a>
			</div>
			<% if (user && user.role === 'admin') { %>
				<ul class="nav navbar-nav">
					<li><a ui-sref="/rosetta">Rosetta</a></li>
					<li><a ui-sref="/hRtm">hRTM</a></li>
					<li><a ui-sref="/units">Units</a></li>
					<li><a ui-sref="/enums">Enumeration</a></li>
				</ul>
				<ul class="nav navbar-nav" style="float: right">
					<li><a class="submitmenu" href="http://bit.ly/reportresult" target="_blank">Submit Result <i class="fa fa-plus-circle"></i></a></li>
					<li class="dropdown" dropdown on-toggle="toggled(open)">
				  	    <a href class="dropdown-toggle" dropdown-toggle>
				        <%= user.email %> <span class="caret"></span>
				      </a>
				      <ul class="dropdown-menu">
				        <li><a ui-sref="/profile">Profile</a></li>
				        <li><a href="/logout">Logout</a></li>
				      </ul>
				    </li>
				</ul>
			<%}else{ %>
				<ul class="nav navbar-nav" >
					<li><a ui-sref="/rosetta">Rosetta</a></li>
					<li><a ui-sref="/hRtm">hRTM</a></li>
					<li><a ui-sref="/units">Units</a></li>
					<li><a ui-sref="/enums">Enumeration</a></li>
					
				</ul>
				<ul class="nav navbar-nav" style="float: right" >
					<li><a ui-sref="/login">Login</a></li>
				</ul>
			<%}%>	
		</nav>

		<div ui-view></div>
		<footer><div class="row"><div class="col-sm-6 text-left">Comments, questions or request? <a ui-sref="/contact">contact us<i class="fa fa-email"></i></a></div><div class="col-sm-6 text-right"></div></div></footer>
	</div>
</body>

</html>
